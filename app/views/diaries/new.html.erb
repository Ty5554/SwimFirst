<%= form_with model: @diary, local: true do |f| %>
  <div class="p-6 bg-white rounded shadow">
    <h2 class="text-xl font-bold">トレーニング日誌を記入</h2>
    <div class="mt-4">
      <%= f.text_area :content, rows: 5, class: "w-full p-2 border rounded" %>
    </div>
    <div class="mt-4">
      <%= f.submit "保存", class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>
    </div>
  </div>
<% end %>

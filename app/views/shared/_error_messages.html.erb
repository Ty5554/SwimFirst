<% if @user&.errors&.any? %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
    <h2 class="text-lg font-semibold mb-2">入力エラーが発生しました:</h2>
    <ul class="list-disc pl-6">
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

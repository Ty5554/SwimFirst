<header class="bg-sky-900 text-white shadow-md">
  <div class="flex justify-between items-center p-4">
    <!-- ロゴ -->
    <div>
      <%= link_to "SwimFirst", root_path, class: "text-xl font-bold text-cyan-300 hover:text-white" %>
      <% if user_signed_in? %>
        <div class="flex items-center text-sm font-medium text-cyan-300 mt-1">
          ようこそ、<span class="font-bold ml-1"><%= current_user.last_name %></span> さん
        </div>
      <% end %>
    </div>

    <!-- メニューリスト -->
    <!-- ヘッダー -->
    <div class="bg-sky-900 text-white">
      <div class="container mx-auto flex justify-center items-center h-16">
    <!-- メニューリスト -->
        <ul class="flex space-x-4 items-center">
        <% if user_signed_in? %>
        <li class="hidden sm:block">
        <%= link_to "ダッシュボードへ", self_records_path, 
          class: "btn btn-outline text-cyan-500 hover:text-white hover:bg-cyan-600 border-cyan-500 shadow-lg" %>
        </li>
        <li class="hidden sm:block">
        <%= link_to "登録状況一覧", athletes_team_path(@team), 
          class: "btn btn-outline text-cyan-500 hover:text-white hover:bg-cyan-600 border-cyan-500 shadow-lg" %>
        </li>
        <li>
        <%= button_to "ログアウト", destroy_user_session_path, method: :delete, data: { turbo_confirm: "本当にログアウトしますか？" }, 
          class: "btn btn-outline text-cyan-500 hover:text-white hover:bg-cyan-600 border-cyan-500 shadow-lg" %>
        </li>
        <% else %>
        <li>
        <%= link_to "新規登録", new_user_registration_path, 
          class: "btn btn-outline text-cyan-500 hover:text-white hover:bg-cyan-600 border-cyan-500 shadow-lg" %>
        </li>
        <li>
        <%= link_to "ログイン", new_user_session_path, 
          class: "btn btn-outline text-cyan-500 hover:text-white hover:bg-cyan-600 border-cyan-500 shadow-lg" %>
        </li>
        <% end %>
        </ul>
      </div>
    </div>
    <% if user_signed_in? %>
    <button id="hamburger-toggle" class="btn btn-square lg:hidden text-white bg-sky-900 hover:bg-sky-700">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16m-7 6h7" />
    </svg>
    </button>
    <% end %>
  </div>
<% if user_signed_in? %>
    <!-- ハンバーガーメニュー (スマホ画面用) -->
  <nav id="mobile-menu" class="hidden bg-sky-900">
    <ul class="p-4 space-y-4">
      <li>
        <%= link_to "自己記録", self_records_path, class: "btn bg-white text-cyan-500 hover:bg-cyan-600 w-full h-12 rounded-md shadow-md" %>
      </li>
      <li>
        <%= link_to "コンディション", conditions_path, class: "btn bg-white text-cyan-500 hover:bg-cyan-600 w-full h-12 rounded-md shadow-md" %>
      </li>
      <li>
        <%= link_to "フィジカル", bodies_path, class: "btn bg-white text-cyan-500 hover:bg-cyan-600 w-full h-12 rounded-md shadow-md" %>
      </li>
      <li>
        <%= link_to "トレーニング", training_menus_path, class: "btn bg-white text-cyan-500 hover:bg-cyan-600 w-full h-12 rounded-md shadow-md" %>
      </li>
      <li>
        <%= link_to "招待URLを発行", team_invitations_path, class: "btn bg-white text-cyan-500 hover:bg-cyan-600 w-full h-12 rounded-md shadow-md" %>
      </li>
      <li>
        <%= link_to "登録状況一覧", athletes_team_path(@team), class: "btn bg-white text-cyan-500 hover:bg-cyan-600 w-full h-12 rounded-md shadow-md" %>
      </li>
      <li>
        <%= link_to "ダッシュボード", self_records_path, class: "btn bg-white text-cyan-500 hover:bg-cyan-600 w-full h-12 rounded-md shadow-md" %>
      </li>
    </ul>
  </nav>
<% end %>
</header>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const toggleButton = document.getElementById("hamburger-toggle");
    const mobileMenu = document.getElementById("mobile-menu");

    toggleButton.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });
  });
</script>


<div class="container mx-auto p-6">
  <!-- タイトル -->
  <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">心拍数編集フォーム</h1>

  <div class="bg-white p-6 rounded-lg shadow-md">
    <%= form_with url: update_all_training_menu_training_sets_path(@training_menu), method: :patch, class: "space-y-6" do |f| %>
      <% @training_sets.each do |training_set| %>
        <div class="form-control border border-gray-200 p-4 rounded-lg bg-gray-50">
          <h3 class="text-lg font-bold text-gray-700 mb-4"><%= training_set.set_number %>セット目</h3>
          <span class="text-sm text-gray-600">運動強度: <%= training_set.intensity %></span>
          <div class="form-control">
            <%= f.label "heart_rates[#{training_set.id}]", '心拍数', class: "label font-bold text-gray-700" %>
            <%= f.number_field "heart_rates[#{training_set.id}]", required: true, class: "input input-bordered w-full" %>
          </div>
        </div>
      <% end %>

      <!-- ボタン -->
      <div class="form-control">
        <%= f.submit '更新する', class: "btn btn-primary w-full" %>
      </div>
    <% end %>
  </div>
</div>
